<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1" android:nestedScrollingEnabled="true">
    <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:id="@+id/spinner" android:layout_gravity="center_horizontal" android:clickable="true"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_weight="0.19" android:autoText="false" android:textSize="20dp"
            android:maxLines = "100"
            android:scrollbars = "vertical"
    />

</LinearLayout>